@page "/tasks/new"

@{
    var breadcrumbItems = new List<BreadcrumbItem> { new BreadcrumbItem { Text = "List", Url = "/tasks" }, new
BreadcrumbItem { Text = "New", Url = "/tasks/new" } };
}

<PageTitle>New Task</PageTitle>

<PageHeader>
    <h1 style="margin-bottom: .4rem;">Tasks</h1>
    <Breadcrumb Items="breadcrumbItems" />
</PageHeader>

<div id="app-content">
    <div style="width: 30%; background-color: white; border-radius: 5px; margin: 1rem; padding: 1rem;">
        <h1>New Task</h1>

        Create your tasks.

        <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1rem;">
            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                <label style="margin-bottom: 0.4rem;">Title</label>
                <input style="width: 100%;" />
            </div>

            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                <label style="margin-bottom: 0.4rem;">Description</label>
                <textarea style="width: 100%; height: 100px;"></textarea>
            </div>

            <div>
                <button
                    style="padding: 0.5rem 1rem; background-color: #007bff; color: white; border: none; border-radius: 3px; cursor: pointer;">
                    Create Task
                </button>
            </div>
        </div>
    </div>
</div>