@page "/tasks/new"
@using Arya.TaskRoute.WebApplication.Widgets.Buttons
@using Arya.TaskRoute.WebApplication.Widgets.Forms
@implements Arya.TaskRoute.WebApplication.Pages.IPage

@{
    var breadcrumbItems = new List<BreadcrumbItem> { new BreadcrumbItem { Text = "List", Url = "/tasks" }, new
BreadcrumbItem { Text = "New", Url = "/tasks/new" } };
}

<PageTitle>New Task</PageTitle>

<PageHeader>
    <h1 style="margin-bottom: .4rem;">Tasks</h1>
    <Breadcrumb Items="breadcrumbItems" />
</PageHeader>

<div id="app-content">
    <PageCard>
        <h1>New Task</h1>

        Create your tasks.

        <PageForm>
            <PageFormElementWraper Label="Title">
                <InputText @bind-Value="title" style="width: 100%;" />
            </PageFormElementWraper>

            <PageFormElementWraper Label="Description">
                <InputTextArea @bind-Value="description" style="width: 100%; height: 100px;" />
            </PageFormElementWraper>

            <div>
                <PrimaryButton Text="Create Task" OnClick="CreateTaskHandler" />
                <SecondaryButton Text="Cancel" OnClick="CancelHandler" />
            </div>
        </PageForm>
    </PageCard>
</div>

@code {

    public string Title => "Task";

    [Inject]
    private NavigationManager? NavigationManager { get; set; }

    private void CancelHandler()
    {
        NavigationManager?.NavigateTo("/tasks");
    }

    private string title = string.Empty;
    private string description = string.Empty;

    private void CreateTaskHandler()
    {
        // Handle create task logic here
    }
}